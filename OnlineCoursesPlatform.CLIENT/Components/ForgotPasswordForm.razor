@code {
    [Parameter] public EventCallback OnSubmit { get; set; }
    [Parameter] public string Email { get; set; }

    private async Task SubmitForm()
    {
        if (OnSubmit.HasDelegate)
        {
            await OnSubmit.InvokeAsync();
        }
    }
}

<div class="forgot-password-form-container">
    <div class="forgot-password-form-header">
        <h2 class="forgot-password-form-title">Forgot your Password?</h2>
        <p class="forgot-password-form-subtitle">Enter your email to receive an OTP code.</p>
    </div>

    <form @onsubmit="SubmitForm" class="forgot-password-form">
        <div class="form-group">
            <input type="email" @bind="Email" placeholder="Email" class="form-input" />
        </div>
        <button type="submit" class="forgot-password-button">Send OTP</button>
    </form>
</div>