@code {
    [Parameter] public EventCallback OnSubmit { get; set; }
    [Parameter] public RegisterRequestDTO RegisterRequest { get; set; }

    private async Task SubmitForm()
    {
        if (OnSubmit.HasDelegate)
        {
            await OnSubmit.InvokeAsync();
        }
    }
}

<div class="register-form-container">
    <div class="register-form-header">
        <h2 class="register-form-title">Create your Account</h2>
        <p class="register-form-subtitle">Join us and start learning! Fill in the details below to sign up.</p>
    </div>

    <form @onsubmit="SubmitForm" class="register-form">
        <div class="form-group">
            <input type="text" @bind="RegisterRequest.FirstName" placeholder="First Name" class="form-input" />
        </div>
        <div class="form-group">
            <input type="text" @bind="RegisterRequest.LastName" placeholder="Last Name" class="form-input" />
        </div>
        <div class="form-group">
            <input type="email" @bind="RegisterRequest.Email" placeholder="Email" class="form-input" />
        </div>
        <div class="form-group">
            <input type="password" @bind="RegisterRequest.Password" placeholder="Password" class="form-input" />
        </div>

        <button type="submit" class="register-submit-button">Create Account</button>

        <div class="register-footer">
            <span>Already have an account?</span>
            <a href="/login" class="register-link">Log in</a>
        </div>
    </form>
</div>